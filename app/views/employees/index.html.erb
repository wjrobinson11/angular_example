<div ng-app='app.employeeApp' ng-controller='EmployeeListCtrl' class="col-xs-8">
  <h1>Employees List</h1>
  <table ng-if="employees" class="table table-hover table-striped">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>SSN</th>
      <th>Salary</th>
    </thead>
    <tbody>
      <tr ng-repeat="employee in employees">
        <td><a ng-click="editEmployee(employee)">{{employee.name}}</a></td>
        <td>{{employee.email}}</td>
        <td>{{employee.ssn | empMaskNumber: 4}}</td>
        <td>{{employee.salary | currency}}</td>
      </tr>
    </tbody>
  </table>
</div>